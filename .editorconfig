  # https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space

insert_final_newline = true
# файл всегда заканчивается пустой строкой

max_line_length = 80
# Принудительный перенос строки после указанного количества символов. off чтобы отключить эту функцию

trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
